<body>
    <%- include('../includes/nav.ejs') %>
    <% if (orders.length <= 0) { %>
        <h1>I serve your order hahahahah</h1>
    <% } else { %>
        <ul>
            <% orders.forEach(order => { %>
                <li>
                    <h1># <%= order._id %></h1>
                    <ul>
                        <% order.items.forEach(product => { %>
                            <li><%= product.title %> (<%= product.qty %>)</li>
                        <% }); %>
                    </ul>
                </li>
            <% }); %>
        </ul>
    <% } %>
    
