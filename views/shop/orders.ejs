<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/order.css">
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <main class="orders">
        <% if (orders.length <= 0) { %>
        <h1>No orders! :(</h1>
        <% } else { %>
        <h1 class="orders__header">Your Orders!</h1>
        <ul class="orders__list">
            <% orders.forEach(order => { %>
            <li class="order">
                <h1 class="order__title">Order - # <%= order._id %></h1>
                <ul class="order__details">
                    <% order.items.forEach(p => { %>
                    <li class="order__detail"><%= p.product.title %> (<%= p.qty %>)</li>
                    <% }); %>
                </ul>
            </li>
            <% }); %>
        </ul>
        <p class="order__total-price">Total: $<span class="price"><%= ordersTotal %></span></p>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>